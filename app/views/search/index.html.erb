<div>
  <%=form_tag("/plays", :method=>"get", :id => 'search-box', :class => 'form-inline offset2') do %>
    <%= text_field_tag(:q, '', :class => 'span6 btn-large') %>
    <%= submit_tag("Search", :class => 'span2 btn btn-primary btn-large') %>
  <% end %>
  <script
     type="text/javascript"
     language="javascript">
    document.getElementById("q").focus();
  </script>

  <div class="tag_cloud">
    <%if @tag_cloud_hash%>
      <% @tag_cloud_hash.each do |tag,size|%>
      <%=link_to tag, "/plays?q=#{tag}", :style=>"font-size:#{size}px"%>
      <%end%>
    <%end%>
  </div>
</div>
